# Backend Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: PostgreSQL Database URL
# For local development with Docker Compose (run: docker compose up -d)
DATABASE_URL=postgresql://finlens:finlens123@localhost:5432/finlens
# For production (e.g., Render, Railway - set this in your hosting dashboard)
# DATABASE_URL is provided automatically by hosting services

# Required: Google Gemini API Key
# Get one at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: AI Model (default: gemini-2.5-flash)
AI_MODEL=gemini-2.5-flash

# Required for production: JWT Secret Key
# Keep this secret and consistent across deployments
JWT_SECRET=your-secure-jwt-secret-change-in-production

# Optional: Currency settings
CURRENCY_CODE=GHS
CURRENCY_SYMBOL=GHâ‚µ

# Optional: Server configuration
HOST=0.0.0.0
PORT=8000

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
